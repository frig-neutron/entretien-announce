{
    "name": "mailer",
    "version": "0.0.1",
    "description": "Relay mail from Pubsub to SMTP",
    "license": "GPL-3.0-only",
    "dependencies": {
        "@google-cloud/functions-framework": "^3.0.0",
        "@google-cloud/logging-winston": "^4.1.3",
        "@google-cloud/pubsub": "^2.19.0",
        "@types/nodemailer": "^6.4.4",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "nodemailer": "^6.7.3",
        "prelude-ts": "^1.0.3",
        "winston": "^3.6.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/jest": "^27.4.1",
        "jest": "^27.5.1",
        "jest-mock-extended": "^2.0.4",
        "ts-jest": "^27.1.3",
        "typescript": "^4.6.2"
    },
    "scripts": {
        "build": "tsc",
        "build-watch": "npm run build && tsc --watch",
        "deploy-prd": "env=prd ./scripts/deploy.sh",
        "deploy-stg": "env=stg ./scripts/deploy.sh",
        "clean": "git clean -f -x src __test__ coverage function.js",
        "deploy": "./scripts/deploy.sh",
        "function": "functions-framework --target=mailer --signature-type=event",
        "gcp-build": "tsc",
        "test": "jest"
    }
}
